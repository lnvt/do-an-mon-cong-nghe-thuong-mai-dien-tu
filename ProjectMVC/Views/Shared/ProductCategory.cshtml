@model List<Model.EF.Menu>

<ul>

    <h3>Các loại thức uống</h3>
    @foreach (var item in Model) //Làm các mục sản phẩm con 5:45 bài 35
    {

        <li class="dropdown">
            <a href="/milktea/@item.Link" target="@item.Target" class="dropdown-toggle" data-toggle="dropdown">@item.Text</a>
            <ul class="dropdown-menu">
                @if (item.Text == "Tất cả trà sữa")
                {
                    <li>
                        <a href="#"style="color:red; background-color:lightgray">Tất cả trà sữa</a>
                    </li>}
                @if (item.Text == "Trà sữa giảm giá")
                {
                    <li>
                        <a href="#" style="color:black; background-color:lightcoral" >Đang hoàn thành: Giảm giá</a>
                    </li>
                }
                @if (item.Text == "Trà sữa mang về")
                {
                    <li>
                        <a href="#"style="color:lightgoldenrodyellow; background-color:greenyellow">Đang hoàn thành: Mang về</a>
                    </li>
                }
            </ul>
        </li>
    }


</ul>

